{
  "name": "discord-social-credit-bot",
  "version": "1.0.0",
  "description": "A Discord bot that analyzes messages for social credit scoring",
  "main": "dist/index.js",
  "type": "module",
  "module": "src/index.ts",
  "scripts": {
    "start": "bun run dist/index.js",
    "build": "bun build --target=bun src/index.js --outfile=dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "check": "npm run lint && npm run format:check && npm test"
  },
  "keywords": [
    "discord",
    "bot",
    "social-credit",
    "openai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "openai": "^4.0.0",
    "@types/node-cron": "^3.0.11",
    "discord.js": "^14.22.1",
    "dotenv": "^17.2.2",
    "mongoose": "^8.18.0",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/express": "^5.0.3",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^24.3.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
